<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Quizzes</title>
  <link rel="stylesheet" href="/css/style.css">
  <script>
    function confirmDelete() {
      return confirm('Are you sure you want to delete this quiz?');
    }
  </script>
</head>
<body>
  <header>
    <h1>Quizzes</h1>
  </header>
  <main>
    <% if (quizzes.length === 0) { %>
      <p>No quizzes available. <a href="/teacher/quizzes">Create a new quiz</a>.</p>
    <% } else { %>
      <ul>
        <% quizzes.forEach(quiz => { %>
          <li>
            <strong><%= quiz.title %></strong>
            <a href="/teacher/quizzes/<%= quiz._id %>/edit">Edit</a>
            <form action="/teacher/quizzes/<%= quiz._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirmDelete();">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
    <a href="/teacher/quizzes/create">Create New Quiz</a>
  </main>
</body>
</html>
