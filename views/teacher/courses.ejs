<!DOCTYPE html>
<html>
<head>
  <title>Courses</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Courses</h1>
  
  <ul>
    <% courses.forEach(course => { %>
      <li>
        <%= course.title %>: <%= course.description %>
        
        <!-- Update button -->
        <a href="/teacher/courses/<%= course._id %>/edit" style="margin-left: 10px;">Edit</a>

        <!-- Delete button -->
        <form action="/teacher/courses/<%= course._id %>/delete" method="POST" style="display:inline;">
          <button type="submit" style="margin-left: 10px;" onclick="return confirm('Are you sure you want to delete this course?');">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <a href="/teacher/createCourse">Create New Course</a>
</body>
</html>
