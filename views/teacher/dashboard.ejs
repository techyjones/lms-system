<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Chart.js for charts -->
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif; /* Modern Font */
      background-color: #f0f2f5; /* Light background for overall layout */
    }

    /* Container for the sidebar and main content */
    #container {
      display: flex;
      height: 100vh;
    }

    /* Sidebar Styling */
    #sidebar {
      width: 250px;
      background-color: #2c3e50;
      color: white;
      padding: 20px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
    }

    #sidebar h2 {
      font-weight: 500;
      font-size: 22px;
      margin-bottom: 40px;
    }

    #sidebar nav ul {
      list-style-type: none;
      padding: 0;
    }

    #sidebar nav ul li {
      margin: 15px 0;
    }

    #sidebar nav ul li a {
      color: white;
      text-decoration: none;
      padding: 12px 15px;
      border-radius: 8px;
      transition: background-color 0.3s ease;
      font-weight: 500;
    }

    #sidebar nav ul li a:hover {
      background-color: #34495e;
    }

    /* Content Area Styling */
    #content {
      flex: 1;
      padding: 40px;
      background-color: #ecf0f1; /* Light grey background */
      overflow-y: auto;
    }

    #content h1 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    #content p {
      font-size: 16px;
      line-height: 1.6;
    }

    /* Styling for Cards */
    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 20px;
    }

    .card h2 {
      margin: 0 0 10px;
      font-size: 22px;
      font-weight: 600;
    }

    .card p {
      margin: 0;
      font-size: 16px;
    }

    /* Chart Container */
    #chart-container {
      width: 100%;
      max-width: 600px;
      margin: 20px auto;
    }

    /* Scrollbar for Sidebar */
    #sidebar::-webkit-scrollbar {
      width: 8px;
    }

    #sidebar::-webkit-scrollbar-thumb {
      background-color: #575757;
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <div id="container">
    <!-- Sidebar -->
    <div id="sidebar">
      <h2>Teacher Dashboard</h2>
      <nav>
        <ul>
          <li><a href="/teacher/courses">View Courses</a></li>
          <li><a href="/teacher/createCourse">Create Course</a></li>
          <li><a href="/teacher/createQuiz">Create Quiz</a></li>
          <li><a href="/teacher/assignments">Manage Assignments</a></li>
          <li><a href="/teacher/createAssignment">Create Assignment</a></li>
          <li><a href="/teacher/report">Generate Student Reports</a></li>
          <li><a href="/teacher/upload">Upload Educational Content</a></li>
          <li><a href="/teacher/viewContent">View Uploaded Content</a></li>
          <li><a href="/teacher/quizzes">View Quizzes</a></li>
          <li><a href="/teacher/enrolledStudents">View Enrolled Students</a></li>
          <li><a href="/teacher/notifications">Send Notification</a></li>
          <li><a href="/teacher/viewreplies">View Replies</a></li>
          <li><a href="/teacher/viewaSubmissions">View Student Submissions</a></li>
          <li><a href="/teacher/scoreboard">View Scoreboard</a></li>
        </ul>
      </nav>
    </div>

    <!-- Main Content -->
    <div id="content">
      <h1>Welcome to the Teacher Dashboard</h1>
      <div class="card">
        <h2>Your Courses</h2>
        <p>List of courses will be displayed here.</p>
      </div>

      <!-- Chart Container -->
      <div id="chart-container" class="card">
        <canvas id="enrollmentChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Script for Chart -->
  <script>
    const ctx = document.getElementById('enrollmentChart').getContext('2d');
    const enrollmentChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: <%- JSON.stringify(chartData.labels) %>, // Pass labels from the server
        datasets: [{
          label: 'Enrolled Students',
          data: <%- JSON.stringify(chartData.data) %>, // Pass data from the server
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Enrollment Distribution'
          }
        }
      }
    });
  </script>
</body>
</html>
