<h1 style="text-align: center; font-size: 28px; color: #333; margin-bottom: 20px;">Student Replies</h1>

<ul style="list-style-type: none; padding: 0; max-width: 600px; margin: 0 auto;">
  <% notifications.forEach(notification => { %>
    <li style="background-color: #f9f9f9; padding: 20px; margin-bottom: 20px; border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
      <p style="font-size: 16px; color: #333;"><strong>To:</strong> <%= notification.student.username %></p>
      <p style="font-size: 16px; color: #333;"><strong>Message:</strong> <%= notification.message %></p>
      <p style="font-size: 16px; color: #333; margin-top: 15px;"><strong>Replies:</strong></p>
      <ul style="list-style-type: none; padding-left: 20px;">
        <% notification.replies.forEach(reply => { %>
          <li style="background-color: #e8e8e8; padding: 10px; margin-bottom: 10px; border-radius: 5px;">
            <p style="font-size: 14px; color: #333;"><strong>From:</strong> <%= reply.student.username %></p>
            <p style="font-size: 14px; color: #333;"><strong>Message:</strong> <%= reply.replyMessage %></p>
          </li>
        <% }) %>
      </ul>
    </li>
  <% }) %>
</ul>
