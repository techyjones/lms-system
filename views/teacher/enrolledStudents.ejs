<!DOCTYPE html>
<html>
<head>
  <title>Enrolled Students in Quizzes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Enrolled Students in Quizzes</h1>

  <% if (enrolledStudents.length === 0) { %>
    <p>No students have enrolled in quizzes yet.</p>
  <% } else { %>
    <ul>
      <% enrolledStudents.forEach(student => { %>
        <li>
          <h3>Student Name: <%= student.username %></h3>
          <p>Email: <%= student.email %></p>

          <!-- Loop through the quizzes each student is enrolled in -->
          <ul>
            <% student.quizzes.forEach(quiz => { %>
              <li>
                <h4>Enrolled in Quiz: <%= quiz.title %></h4>

                <!-- Form to manually grade the quiz -->
                <form action="/teacher/gradeQuiz/<%= quiz._id %>/<%= student._id %>" method="POST">
                  <label for="grade">Enter Grade (1-10): </label>
                  <input type="number" name="grade" min="1" max="10" required>
                  <button type="submit">Submit Grade</button>
                </form>
              </li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
  <% } %>

</body>
</html>
