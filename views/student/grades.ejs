<!DOCTYPE html>
<html>
<head>
  <title>My Grades</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>My Grades</h1>

  <h2>Assignment Grades</h2>
  <% if (assignmentGrades.length === 0) { %>
    <p>No assignment grades available yet.</p>
  <% } else { %>
    <ul>
      <% assignmentGrades.forEach(submission => { %>
        <li>
          Assignment: <%= submission.assignmentId.title %> - Grade: <%= submission.grade !== null ? submission.grade : 'N/A' %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <h2>Quiz Grades</h2>
  <% if (quizGrades.length === 0) { %>
    <p>No quiz grades available yet.</p>
  <% } else { %>
    <ul>
      <% quizGrades.forEach(quiz => { %>
        <li>
          Quiz: <%= quiz.quizId.title %> - Grade: <%= quiz.grade !== null ? quiz.grade : 'N/A' %>
        </li>
      <% }) %>
    </ul>
  <% } %>

</body>
</html>
